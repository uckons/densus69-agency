<%- include('../partials/header') %>
<section class="relative h-screen flex items-center justify-center bg-gradient-to-br from-pink-500 via-purple-600 to-model-700 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 text-center px-4">
        <div class="mb-8 animate-bounce">
            <i class="fas fa-star text-white text-6xl md:text-8xl"></i>
        </div>
        
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
            Discover Your Next<br>
            <span class="text-yellow-300">Star Model</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-white mb-8 max-w-3xl mx-auto">
            Indonesia's premier modeling agency connecting top talent with leading brands
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
            <a href="/models" 
               class="px-8 py-4 bg-white text-model-600 rounded-full font-semibold text-lg hover:bg-gray-100 transition transform hover:scale-105 shadow-xl">
                <i class="fas fa-users mr-2"></i>Browse Models
            </a>
            <a href="/auth/register" 
               class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-full font-semibold text-lg hover:bg-white hover:text-model-600 transition transform hover:scale-105">
                <i class="fas fa-user-plus mr-2"></i>Become a Model
            </a>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
        <i class="fas fa-chevron-down text-white text-3xl"></i>
    </div>
</section>

<!-- Stats Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-model-600 mb-2">
                    <%= typeof stats !== 'undefined' ? stats.totalModels : '500+' %>
                </div>
                <div class="text-gray-600">Professional Models</div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-pink-600 mb-2">
                    <%= typeof stats !== 'undefined' ? stats.totalJobs : '1000+' %>
                </div>
                <div class="text-gray-600">Jobs Completed</div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-purple-600 mb-2">
                    <%= typeof stats !== 'undefined' ? stats.totalClients : '200+' %>
                </div>
                <div class="text-gray-600">Happy Clients</div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-blue-600 mb-2">
                    <%= typeof stats !== 'undefined' ? stats.yearsExperience : '10+' %>
                </div>
                <div class="text-gray-600">Years Experience</div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Models Section -->
<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-800 mb-4">Featured Models</h2>
            <p class="text-xl text-gray-600">Meet our top talent</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8 mb-8">
            <% if (typeof featuredModels !== 'undefined' && featuredModels.length > 0) { %>
                <% featuredModels.forEach(model => { %>
                    <a href="/model/<%= model._id %>" 
                       class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all transform hover:-translate-y-2">
                        <div class="aspect-[3/4] overflow-hidden bg-gray-200">
                            <img src="<%= model.photo || '/images/default-avatar.png' %>" 
                                 alt="<%= model.name %>" 
                                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        </div>
                        <div class="p-4">
                            <h3 class="font-bold text-lg text-gray-800 mb-1"><%= model.name %></h3>
                            <p class="text-gray-600 text-sm mb-2"><%= model.city %></p>
                            <div class="flex items-center justify-between text-xs text-gray-500">
                                <span><%= model.height %>cm</span>
                                <span>•</span>
                                <span><%= model.gender %></span>
                                <span>•</span>
                                <span class="text-model-600 font-semibold">View Profile</span>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } %>
        </div>
        
        <div class="text-center">
            <a href="/models" 
               class="inline-block px-8 py-3 bg-model-600 text-white rounded-full font-semibold hover:bg-model-700 transition">
                View All Models <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>
    </div>
</section>

