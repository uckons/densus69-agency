<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Photo Gallery</h2>
            <p class="text-gray-600 text-sm mt-1">Manage your portfolio photos</p>
        </div>
        
        <button onclick="document.getElementById('upload-input').click()" 
                class="bg-model-600 text-white px-6 py-3 rounded-lg hover:bg-model-700 transition">
            <i class="fas fa-upload mr-2"></i>Upload Photos
        </button>
    </div>
    
    <!-- Upload Form (Hidden) -->
    <form id="upload-form" class="hidden">
        <input type="file" 
               id="upload-input" 
               name="photos" 
               accept="image/*" 
               multiple
               onchange="handleUpload(event)">
    </form>
    
    <!-- Gallery Grid -->
    <div id="gallery-grid" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% if (typeof gallery !== 'undefined' && gallery.length > 0) { %>
            <% gallery.forEach(photo => { %>
                <div class="relative group aspect-square rounded-lg overflow-hidden shadow-md hover:shadow-xl transition">
                    <img src="<%= photo.url %>" 
                         alt="Gallery" 
                         class="w-full h-full object-cover">
                    
                    <!-- Overlay -->
                    <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all flex items-center justify-center opacity-0 group-hover:opacity-100">
                        <div class="flex space-x-2">
                            <button onclick="viewPhoto('<%= photo.url %>')" 
                                    class="bg-white text-gray-800 p-3 rounded-full hover:bg-gray-100 transition">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button onclick="deletePhoto('<%= photo._id %>')" 
                                    class="bg-red-500 text-white p-3 rounded-full hover:bg-red-600 transition">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    
                    <!-- Make Primary Badge -->
                    <% if (photo.isPrimary) { %>
                        <div class="absolute top-2 right-2 bg-model-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
                            <i class="fas fa-star mr-1"></i>Primary
                        </div>
                    <% } else { %>
                        <button onclick="setPrimary('<%= photo._id %>')" 
                                class="absolute top-2 right-2 bg-white bg-opacity-90 text-gray-700 px-3 py-1 rounded-full text-xs font-semibold opacity-0 group-hover:opacity-100 transition hover:bg-opacity-100">
                            <i class="fas fa-star mr-1"></i>Set Primary
                        </button>
                    <% } %>
                    
                    <!-- Upload Date -->
                    <div class="absolute bottom-2 left-2 bg-black bg-opacity-75 text-white px-2 py-1 rounded text-xs">
                        <%= new Date(photo.createdAt).toLocaleDateString('id-ID') %>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-span-full text-center py-16">
                <i class="fas fa-images text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-lg mb-4">No photos in your gallery yet</p>
                <button onclick="document.getElementById('upload-input').click()" 
                        class="bg-model-600 text-white px-6 py-3 rounded-lg hover:bg-model-700 transition">
                    <i class="fas fa-upload mr-2"></i>Upload Your First Photo
                </button>
            </div>
        <% } %>
    </div>
    
    <!-- Guidelines -->
    <div class="bg-blue-50 border-l-4 border-blue-500 p-6 rounded-lg">
        <h3 class="font-semibold text-blue-900 mb-2">
            <i class="fas fa-info-circle mr-2"></i>Photo Guidelines
        </h3>
        <ul class="text-sm text-blue-800 space-y-1">
            <li>• Upload high-quality, professional photos</li>
            <li>• Recommended size: At least 1200x1200 pixels</li>
            <li>• Accepted formats: JPG, PNG, GIF (Max 5MB per photo)</li>
            <li>• Set one photo as your primary profile photo</li>
            <li>• You can upload up to 20 photos</li>
        </ul>
    </div>
</div>

<!-- Photo Viewer Modal -->
<div id="photo-viewer" class="hidden fixed inset-0 bg-black bg-opacity-90 z-50 flex items-center justify-center p-4">
    <div class="relative max-w-4xl w-full">
        <button onclick="closeViewer()" 
                class="absolute top-4 right-4 text-white hover:text-gray-300 text-3xl">
            <i class="fas fa-times"></i>
        </button>
        <img id="viewer-image" src="" alt="Photo" class="w-full h-auto rounded-lg">
    </div>
</div>

<script>
    async function handleUpload(event) {
        const files = event.target.files;
        
        if (files.length === 0) return;
        
        const formData = new FormData();
        for (let i = 0; i < files.length; i++) {
            formData.append('photos', files[i]);
        }
        
        try {
            showLoading();
            const response = await fetch('/model/gallery/upload', {
                method: 'POST',
                body: formData
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast(`${files.length} photo(s) uploaded successfully`, 'success');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                showToast(data.message || 'Upload failed', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred during upload', 'error');
        }
        
        // Reset input
        event.target.value = '';
    }
    
    async function deletePhoto(photoId) {
        if (!confirm('Are you sure you want to delete this photo?')) return;
        
        try {
            showLoading();
            const response = await fetch(`/model/gallery/${photoId}`, {
                method: 'DELETE'
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Photo deleted successfully', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.message || 'Failed to delete photo', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
    
    async function setPrimary(photoId) {
        try {
            showLoading();
            const response = await fetch(`/model/gallery/${photoId}/set-primary`, {
                method: 'POST'
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Primary photo updated', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.message || 'Failed to set primary', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
    
    function viewPhoto(url) {
        document.getElementById('viewer-image').src = url;
        document.getElementById('photo-viewer').classList.remove('hidden');
    }
    
    function closeViewer() {
        document.getElementById('photo-viewer').classList.add('hidden');
    }
    
    // Close viewer on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeViewer();
    });
</script>
