<div class="space-y-6">
    <!-- Header -->
    <div>
        <h2 class="text-2xl font-bold text-gray-800">My Bookings</h2>
        <p class="text-gray-600 text-sm mt-1">View your upcoming and past bookings</p>
    </div>
    
    <!-- Filter Tabs -->
    <div class="bg-white rounded-xl shadow-md p-2 flex space-x-2">
        <button onclick="filterBookings('all')" 
                id="tab-all"
                class="flex-1 px-4 py-2 rounded-lg font-medium transition bg-model-600 text-white">
            All
        </button>
        <button onclick="filterBookings('upcoming')" 
                id="tab-upcoming"
                class="flex-1 px-4 py-2 rounded-lg font-medium transition text-gray-600 hover:bg-gray-100">
            Upcoming
        </button>
        <button onclick="filterBookings('completed')" 
                id="tab-completed"
                class="flex-1 px-4 py-2 rounded-lg font-medium transition text-gray-600 hover:bg-gray-100">
            Completed
        </button>
        <button onclick="filterBookings('cancelled')" 
                id="tab-cancelled"
                class="flex-1 px-4 py-2 rounded-lg font-medium transition text-gray-600 hover:bg-gray-100">
            Cancelled
        </button>
    </div>
    
    <!-- Bookings List -->
    <div class="space-y-4" id="bookings-list">
        <% if (typeof bookings !== 'undefined' && bookings.length > 0) { %>
            <% bookings.forEach(booking => { %>
                <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition" data-status="<%= booking.status %>">
                    <div class="flex flex-col md:flex-row md:items-center justify-between space-y-4 md:space-y-0">
                        <div class="flex-1">
                            <div class="flex items-center space-x-3 mb-2">
                                <h3 class="text-lg font-bold text-gray-800"><%= booking.jobType %></h3>
                                <span class="px-3 py-1 text-xs font-semibold rounded-full 
                                    <%= booking.status === 'completed' ? 'bg-green-100 text-green-800' : 
                                        booking.status === 'upcoming' ? 'bg-blue-100 text-blue-800' : 
                                        booking.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                        'bg-red-100 text-red-800' %>">
                                    <%= booking.status %>
                                </span>
                            </div>
                            
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-3 text-sm text-gray-600">
                                <div class="flex items-center">
                                    <i class="fas fa-calendar mr-2 text-model-500"></i>
                                    <span><%= new Date(booking.date).toLocaleDateString('id-ID') %></span>
                                </div>
                                <div class="flex items-center">
                                    <i class="fas fa-building mr-2 text-model-500"></i>
                                    <span><%= booking.clientName %></span>
                                </div>
                                <div class="flex items-center">
                                    <i class="fas fa-map-marker-alt mr-2 text-model-500"></i>
                                    <span><%= booking.location || 'Location TBD' %></span>
                                </div>
                            </div>
                            
                            <% if (booking.description) { %>
                                <p class="mt-3 text-sm text-gray-600"><%= booking.description %></p>
                            <% } %>
                            
                            <div class="mt-3 flex items-center space-x-4">
                                <span class="text-lg font-bold text-model-600">
                                    <%= formatCurrency(booking.amount) %>
                                </span>
                                <% if (booking.duration) { %>
                                    <span class="text-sm text-gray-500">
                                        <i class="fas fa-clock mr-1"></i><%= booking.duration %> day(s)
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="flex md:flex-col space-x-2 md:space-x-0 md:space-y-2">
                            <button onclick="viewBookingDetails('<%= booking._id %>')" 
                                    class="px-4 py-2 border border-model-600 text-model-600 rounded-lg hover:bg-model-50 transition text-sm">
                                <i class="fas fa-info-circle mr-1"></i>Details
                            </button>
                            
                            <% if (booking.status === 'upcoming') { %>
                                <button onclick="contactClient('<%= booking._id %>')" 
                                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-sm">
                                    <i class="fas fa-envelope mr-1"></i>Contact
                                </button>
                            <% } %>
                            
                            <% if (booking.status === 'pending') { %>
                                <button onclick="acceptBooking('<%= booking._id %>')" 
                                        class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm">
                                    <i class="fas fa-check mr-1"></i>Accept
                                </button>
                                <button onclick="declineBooking('<%= booking._id %>')" 
                                        class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition text-sm">
                                    <i class="fas fa-times mr-1"></i>Decline
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="bg-white rounded-xl shadow-md p-12 text-center">
                <i class="fas fa-calendar-times text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-lg">No bookings found</p>
                <p class="text-gray-400 text-sm mt-2">Your bookings will appear here</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Booking Details Modal -->
<div id="booking-modal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="sticky top-0 bg-white border-b border-gray-200 p-6 flex items-center justify-between">
            <h3 class="text-xl font-bold text-gray-800">Booking Details</h3>
            <button onclick="closeBookingModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <div id="booking-details-content" class="p-6">
            <!-- Content will be loaded dynamically -->
        </div>
    </div>
</div>

<script>
    function filterBookings(status) {
        // Update tabs
        ['all', 'upcoming', 'completed', 'cancelled'].forEach(tab => {
            const btn = document.getElementById(`tab-${tab}`);
            if (tab === status) {
                btn.classList.add('bg-model-600', 'text-white');
                btn.classList.remove('text-gray-600', 'hover:bg-gray-100');
            } else {
                btn.classList.remove('bg-model-600', 'text-white');
                btn.classList.add('text-gray-600', 'hover:bg-gray-100');
            }
        });
        
        // Filter bookings
        const bookings = document.querySelectorAll('#bookings-list > div');
        bookings.forEach(booking => {
            if (status === 'all' || booking.dataset.status === status) {
                booking.style.display = '';
            } else {
                booking.style.display = 'none';
            }
        });
    }
    
    function viewBookingDetails(bookingId) {
        document.getElementById('booking-modal').classList.remove('hidden');
        document.getElementById('booking-details-content').innerHTML = `
            <div class="space-y-4">
                <p class="text-gray-600">Loading booking details...</p>
            </div>
        `;
        
        // In a real app, fetch booking details
        setTimeout(() => {
            document.getElementById('booking-details-content').innerHTML = `
                <div class="space-y-6">
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-2">Full Details</h4>
                        <p class="text-gray-600">Complete booking information will be displayed here...</p>
                    </div>
                    <button onclick="closeBookingModal()" 
                            class="w-full px-6 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                        Close
                    </button>
                </div>
            `;
        }, 500);
    }
    
    function closeBookingModal() {
        document.getElementById('booking-modal').classList.add('hidden');
    }
    
    function contactClient(bookingId) {
        showToast('Contact feature coming soon', 'info');
    }
    
    async function acceptBooking(bookingId) {
        if (!confirm('Accept this booking?')) return;
        
        try {
            showLoading();
            const response = await fetch(`/model/bookings/${bookingId}/accept`, {
                method: 'POST'
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Booking accepted', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.message || 'Failed to accept', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
    
    async function declineBooking(bookingId) {
        if (!confirm('Decline this booking?')) return;
        
        try {
            showLoading();
            const response = await fetch(`/model/bookings/${bookingId}/decline`, {
                method: 'POST'
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Booking declined', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.message || 'Failed to decline', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
</script>
