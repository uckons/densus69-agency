<div class="space-y-6">
    <!-- Header Actions -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Models Management</h2>
            <p class="text-gray-600 text-sm mt-1">Manage all registered models</p>
        </div>
        
        <div class="flex space-x-3">
            <button onclick="exportModels()" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">
                <i class="fas fa-file-export mr-2"></i>Export
            </button>
        </div>
    </div>
    
    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
                <input type="text" 
                       id="search" 
                       placeholder="Name or email..." 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500 focus:border-transparent"
                       onkeyup="filterModels()">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select id="statusFilter" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500 focus:border-transparent"
                        onchange="filterModels()">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="pending">Pending</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Gender</label>
                <select id="genderFilter" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500 focus:border-transparent"
                        onchange="filterModels()">
                    <option value="">All Genders</option>
                    <option value="female">Female</option>
                    <option value="male">Male</option>
                    <option value="other">Other</option>
                </select>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">City</label>
                <input type="text" 
                       id="cityFilter" 
                       placeholder="City..." 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500 focus:border-transparent"
                       onkeyup="filterModels()">
            </div>
        </div>
    </div>
    
    <!-- Models Table -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-admin-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Model
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Contact
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Details
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Rate
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Joined
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="models-table-body" class="bg-white divide-y divide-gray-200">
                    <% if (typeof models !== 'undefined' && models.length > 0) { %>
                        <% models.forEach(model => { %>
                            <tr class="hover:bg-gray-50 transition" data-model-id="<%= model._id %>">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <img src="<%= model.photo || '/images/default-avatar.png' %>" 
                                             alt="<%= model.name %>" 
                                             class="w-12 h-12 rounded-full object-cover border-2 border-gray-200">
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900"><%= model.name %></div>
                                            <div class="text-sm text-gray-500">ID: <%= model._id.toString().slice(-8) %></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900"><%= model.email %></div>
                                    <div class="text-sm text-gray-500"><%= model.phone %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        <%= model.gender %> • <%= model.age || 'N/A' %> yrs
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        <%= model.height || 'N/A' %>cm • <%= model.weight || 'N/A' %>kg
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        <i class="fas fa-map-marker-alt"></i> <%= model.city %>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                                        <%= model.status === 'active' ? 'bg-green-100 text-green-800' : 
                                            model.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                                            'bg-red-100 text-red-800' %>">
                                        <%= model.status %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                    <%= model.rate ? formatCurrency(model.rate) + '/day' : 'Not set' %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <%= new Date(model.createdAt).toLocaleDateString('id-ID') %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex justify-end space-x-2">
                                        <a href="/admin/model-edit/<%= model._id %>" 
                                           class="text-admin-600 hover:text-admin-900 transition"
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/model/<%= model._id %>/profile" 
                                           target="_blank"
                                           class="text-green-600 hover:text-green-900 transition"
                                           title="View Profile">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button onclick="deleteModel('<%= model._id %>')" 
                                                class="text-red-600 hover:text-red-900 transition"
                                                title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                                <i class="fas fa-users text-4xl mb-2"></i>
                                <p>No models found</p>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        <div class="bg-gray-50 px-6 py-4 flex items-center justify-between border-t border-gray-200">
            <div class="text-sm text-gray-700">
                Showing <span class="font-medium"><%= typeof models !== 'undefined' ? models.length : 0 %></span> models
            </div>
            <div class="flex space-x-2">
                <button class="px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-100 disabled:opacity-50" disabled>
                    Previous
                </button>
                <button class="px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-100 disabled:opacity-50" disabled>
                    Next
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function filterModels() {
        const search = document.getElementById('search').value.toLowerCase();
        const status = document.getElementById('statusFilter').value.toLowerCase();
        const gender = document.getElementById('genderFilter').value.toLowerCase();
        const city = document.getElementById('cityFilter').value.toLowerCase();
        
        const rows = document.querySelectorAll('#models-table-body tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const matchSearch = !search || text.includes(search);
            const matchStatus = !status || text.includes(status);
            const matchGender = !gender || text.includes(gender);
            const matchCity = !city || text.includes(city);
            
            if (matchSearch && matchStatus && matchGender && matchCity) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }
    
    async function deleteModel(modelId) {
        if (!confirm('Are you sure you want to delete this model? This action cannot be undone.')) {
            return;
        }
        
        try {
            showLoading();
            const response = await fetch(`/admin/models/${modelId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Model deleted successfully', 'success');
                // Remove row from table
                document.querySelector(`tr[data-model-id="${modelId}"]`)?.remove();
            } else {
                showToast(data.message || 'Failed to delete model', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
    
    function exportModels() {
        showLoading();
        window.location.href = '/admin/models/export';
        setTimeout(hideLoading, 2000);
    }
</script>
