<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaints - Densus69 Agency</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        admin: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <%- include('../partials/header') %>
    
    <div class="flex h-screen bg-gray-100">
        <!-- Sidebar -->
        <aside id="sidebar" class="sidebar fixed md:relative inset-y-0 left-0 z-30 w-64 bg-admin-800 text-white transform -translate-x-full md:translate-x-0 transition-transform duration-300">
            <div class="flex flex-col h-full">
                <!-- Logo -->
                <div class="flex items-center justify-between h-16 px-6 bg-admin-900">
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-star text-admin-400 text-xl"></i>
                        <span class="text-xl font-bold">Admin Panel</span>
                    </div>
                    <button id="close-sidebar" class="md:hidden text-white hover:text-admin-300">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>
                
                <!-- Navigation -->
                <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
                    <a href="/admin/dashboard" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition ">
                        <i class="fas fa-tachometer-alt w-5"></i>
                        <span>Dashboard</span>
                    </a>
                    
                    <a href="/admin/models" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition ">
                        <i class="fas fa-users w-5"></i>
                        <span>Models</span>
                    </a>
                    
                    <a href="/admin/jobs" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition ">
                        <i class="fas fa-briefcase w-5"></i>
                        <span>Jobs</span>
                    </a>
                    
                    <a href="/admin/transactions" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition ">
                        <i class="fas fa-exchange-alt w-5"></i>
                        <span>Transactions</span>
                    </a>
                    
                    <a href="/admin/analytics" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition ">
                        <i class="fas fa-chart-line w-5"></i>
                        <span>Analytics</span>
                    </a>
                    
                        <i class="fas fa-exclamation-triangle w-5"></i>
                        <span>Complaints</span>
                    </a>
                    <hr class="my-4 border-admin-700">
                    
                    <a href="/admin/users" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition">
                        <i class="fas fa-user-cog w-5"></i>
                        <span>Users</span>
                    </a>
                    
                    <a href="/admin/agents" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition">
                        <i class="fas fa-user-tie w-5"></i>
                        <span>Agents</span>
                    </a>
                        <i class="fas fa-exclamation-triangle w-5"></i>
                        <span>Complaints</span>
                    </a>
                    
                    <hr class="my-4 border-admin-700">
                    
                    <a href="/" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-admin-700 transition">
                        <i class="fas fa-home w-5"></i>
                        <span>Public Site</span>
                    </a>
                    
                    <a href="/auth/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-red-600 transition text-red-300">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        <span>Logout</span>
                    </a>
                </nav>
                
                <!-- User Info -->
                <div class="px-6 py-4 bg-admin-900 border-t border-admin-700">
                    <div class="flex items-center space-x-3">
                        <img src="/images/default-avatar.png" 
                             alt="Admin" 
                             class="w-10 h-10 rounded-full object-cover border-2 border-admin-600">
                        <div>
                            <p class="font-medium"><%= typeof user !== 'undefined' ? user.email : 'Admin' %></p>
                            <p class="text-xs text-admin-300">Administrator</p>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Bar -->
            <header class="bg-white shadow-sm h-16 flex items-center justify-between px-6">
                <button id="open-sidebar" class="md:hidden text-gray-600 hover:text-gray-900">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
                
                <h1 class="text-xl font-semibold text-gray-800">Complaints</h1>
                
                <div class="flex items-center space-x-4">
                    <a href="/auth/logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6">
<div class="space-y-6">
    <!-- Header -->
    <div>
        <h2 class="text-2xl font-bold text-gray-800">Customer Complaints</h2>
        <p class="text-gray-600 text-sm mt-1">Manage and respond to customer complaints</p>
    </div>
    
    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-red-500">
            <p class="text-gray-500 text-sm font-medium">Pending</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">
                <%= typeof stats !== 'undefined' ? stats.pending : 0 %>
            </p>
        </div>
        
        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-yellow-500">
            <p class="text-gray-500 text-sm font-medium">In Progress</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">
                <%= typeof stats !== 'undefined' ? stats.inProgress : 0 %>
            </p>
        </div>
        
        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500">
            <p class="text-gray-500 text-sm font-medium">Resolved</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">
                <%= typeof stats !== 'undefined' ? stats.resolved : 0 %>
            </p>
        </div>
        
        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-gray-500">
            <p class="text-gray-500 text-sm font-medium">Total</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">
                <%= typeof complaints !== 'undefined' ? complaints.length : 0 %>
            </p>
        </div>
    </div>
    
    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <input type="text" 
                   id="search" 
                   placeholder="Search..." 
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500"
                   onkeyup="filterComplaints()">
            
            <select id="statusFilter" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500"
                    onchange="filterComplaints()">
                <option value="">All Status</option>
                <option value="pending">Pending</option>
                <option value="in_progress">In Progress</option>
                <option value="resolved">Resolved</option>
            </select>
            
            <select id="priorityFilter" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500"
                    onchange="filterComplaints()">
                <option value="">All Priority</option>
                <option value="high">High</option>
                <option value="medium">Medium</option>
                <option value="low">Low</option>
            </select>
            
            <button onclick="clearFilters()" 
                    class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                <i class="fas fa-times mr-2"></i>Clear
            </button>
        </div>
    </div>
    
    <!-- Complaints List -->
    <div class="space-y-4" id="complaints-list">
        <% if (typeof complaints !== 'undefined' && complaints.length > 0) { %>
            <% complaints.forEach(complaint => { %>
                <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <div class="flex items-center space-x-3 mb-2">
                                <h3 class="text-lg font-semibold text-gray-900"><%= complaint.subject %></h3>
                                <span class="px-3 py-1 text-xs font-semibold rounded-full 
                                    <%= complaint.status === 'resolved' ? 'bg-green-100 text-green-800' : 
                                        complaint.status === 'in_progress' ? 'bg-yellow-100 text-yellow-800' : 
                                        'bg-red-100 text-red-800' %>">
                                    <%= complaint.status %>
                                </span>
                                <span class="px-3 py-1 text-xs font-semibold rounded-full
                                    <%= complaint.priority === 'high' ? 'bg-red-100 text-red-800' :
                                        complaint.priority === 'medium' ? 'bg-yellow-100 text-yellow-800' :
                                        'bg-gray-100 text-gray-800' %>">
                                    <%= complaint.priority || 'medium' %> priority
                                </span>
                            </div>
                            
                            <p class="text-gray-700 mb-3"><%= complaint.message %></p>
                            
                            <div class="flex items-center space-x-6 text-sm text-gray-500">
                                <span><i class="fas fa-user mr-2"></i><%= complaint.name %></span>
                                <span><i class="fas fa-envelope mr-2"></i><%= complaint.email %></span>
                                <span><i class="fas fa-phone mr-2"></i><%= complaint.phone || 'N/A' %></span>
                                <span><i class="fas fa-clock mr-2"></i><%= new Date(complaint.createdAt).toLocaleString('id-ID') %></span>
                            </div>
                            
                            <% if (complaint.response) { %>
                                <div class="mt-4 p-4 bg-admin-50 rounded-lg border-l-4 border-admin-500">
                                    <p class="text-sm font-medium text-gray-700 mb-1">Admin Response:</p>
                                    <p class="text-sm text-gray-600"><%= complaint.response %></p>
                                    <p class="text-xs text-gray-500 mt-2">
                                        Responded by <%= complaint.respondedBy?.name || 'Admin' %> on 
                                        <%= new Date(complaint.respondedAt).toLocaleString('id-ID') %>
                                    </p>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="ml-4 flex flex-col space-y-2">
                            <button onclick="respondToComplaint('<%= complaint._id %>')" 
                                    class="px-4 py-2 bg-admin-600 text-white rounded-lg hover:bg-admin-700 transition text-sm">
                                <i class="fas fa-reply mr-2"></i>Respond
                            </button>
                            
                            <% if (complaint.status !== 'resolved') { %>
                                <button onclick="resolveComplaint('<%= complaint._id %>')" 
                                        class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm">
                                    <i class="fas fa-check mr-2"></i>Resolve
                                </button>
                            <% } %>
                            
                            <button onclick="deleteComplaint('<%= complaint._id %>')" 
                                    class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition text-sm">
                                <i class="fas fa-trash mr-2"></i>Delete
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="bg-white rounded-xl shadow-md p-12 text-center">
                <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-lg">No complaints found</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Response Modal -->
<div id="response-modal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-gray-800">Respond to Complaint</h3>
            <button onclick="closeResponseModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <form id="response-form" onsubmit="submitResponse(event)">
            <input type="hidden" id="complaint-id" name="complaintId">
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Response Message *</label>
                    <textarea name="response" 
                              rows="6" 
                              required
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500"
                              placeholder="Enter your response..."></textarea>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Update Status</label>
                    <select name="status" 
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-admin-500">
                        <option value="in_progress">In Progress</option>
                        <option value="resolved">Resolved</option>
                    </select>
                </div>
            </div>
            
            <div class="flex justify-end space-x-3 mt-6">
                <button type="button" 
                        onclick="closeResponseModal()" 
                        class="px-6 py-3 border border-gray-300 rounded-lg hover:bg-gray-50">
                    Cancel
                </button>
                <button type="submit" 
                        class="px-6 py-3 bg-admin-600 text-white rounded-lg hover:bg-admin-700">
                    <i class="fas fa-paper-plane mr-2"></i>Send Response
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function filterComplaints() {
        // Implementation for filtering
    }
    
    function clearFilters() {
        document.getElementById('search').value = '';
        document.getElementById('statusFilter').value = '';
        document.getElementById('priorityFilter').value = '';
    }
    
    function respondToComplaint(id) {
        document.getElementById('complaint-id').value = id;
        document.getElementById('response-modal').classList.remove('hidden');
    }
    
    function closeResponseModal() {
        document.getElementById('response-modal').classList.add('hidden');
        document.getElementById('response-form').reset();
    }
    
    async function submitResponse(event) {
        event.preventDefault();
        
        const formData = new FormData(event.target);
        const complaintId = formData.get('complaintId');
        
        try {
            showLoading();
            const response = await fetch(`/admin/complaints/${complaintId}/respond`, {
                method: 'POST',
                body: formData
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Response sent successfully', 'success');
                closeResponseModal();
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.message || 'Failed to send response', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
    
    async function resolveComplaint(id) {
        if (!confirm('Mark this complaint as resolved?')) return;
        
        try {
            showLoading();
            const response = await fetch(`/admin/complaints/${id}/resolve`, {
                method: 'POST'
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Complaint marked as resolved', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.message || 'Failed to resolve', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
    
    async function deleteComplaint(id) {
        if (!confirm('Are you sure you want to delete this complaint?')) return;
        
        try {
            showLoading();
            const response = await fetch(`/admin/complaints/${id}`, {
                method: 'DELETE'
            });
            
            const data = await response.json();
            hideLoading();
            
            if (data.success) {
                showToast('Complaint deleted', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.message || 'Failed to delete', 'error');
            }
        } catch (error) {
            hideLoading();
            showToast('An error occurred', 'error');
        }
    }
</script>
            </main>
        </div>
    </div>
    
    <!-- Sidebar Toggle Script -->
    <script>
        const sidebar = document.getElementById('sidebar');
        const openBtn = document.getElementById('open-sidebar');
        const closeBtn = document.getElementById('close-sidebar');
        
        openBtn?.addEventListener('click', () => {
            sidebar.classList.remove('-translate-x-full');
        });
        
        closeBtn?.addEventListener('click', () => {
            sidebar.classList.add('-translate-x-full');
        });
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', (e) => {
            if (window.innerWidth < 768 && 
                !sidebar.contains(e.target) && 
                !openBtn.contains(e.target) &&
                !sidebar.classList.contains('-translate-x-full')) {
                sidebar.classList.add('-translate-x-full');
            }
        });
    </script>
    
    <%- include('../partials/footer') %>
</body>
</html>
